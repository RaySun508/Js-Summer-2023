//print answer as true/fales / verify 'oNe" present only once print true ; otherwise print false

let inputStr = '';
//1. Convert inputStr 

let inputStr = 'one two three one four five';
let count = 0;

// Split the input string into an array of words
let words = inputStr.split(' ');

// Iterate through each word in the array
for (let i = 0; i < words.length; i++) {
  // Check if the current word is equal to 'oNe' (ignoring case)
  if (words[i].toLowerCase() === 'one') {
    count++;
    
    // If 'oNe' is found more than once, exit the loop
    if (count > 1) {
      break;
    }
  }
}

// Check the count of occurrences of 'oNe'
if (count === 1) {
  console.log(true);
} else {
  console.log(false);
}

